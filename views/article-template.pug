extends ./main-layout.pug
include ./mixins/article-helpers.pug


block body
  +article_header(article)
  +share_article( "/publications/", article.id )
  div( class="container destinos-text-font" style="padding-top: 40px" )
    each section in article.sections
      if section.format === "img_down"
        +down_pic_section(section)
      else if section.format === "img_right"
        +right_pic_section(section)
      else
        +left_pic_section(section)
    if article.format === "advanced"
      +double_video_frame( article.video_urls[0], article.video_headers[0], article.video_urls[1], article.video_headers[1] )
    else if article.format === "medium"
      +single_video_frame( article.video_urls[0], article.video_headers[0])
    br
    br
  +share_article( article.id )
  include ./partials/logo-link.pug
  

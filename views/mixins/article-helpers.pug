mixin article_header(article)
  div( class="container" style="padding-top: 60px" )
    div( class="jumbotron text-center" )
      h1( class="destinos-title-font" ) #{article.title}
      img( class="img-responsive" src=article.main_image_url 
           alt="Image" style="width: 100%")
      h4( class="destinos-text-font" ) 
        strong #{__("By")} #{article.author} | #{article.pub_date}
      div( style="padding-top: 35px")
        p( class="destinos-text-font" ) #{article.abstract} 
  
mixin right_pic_section(section)
  div( class="row" style="padding-top: 70px")
    div( class="col-sm-6") 
      h2
        strong( class="destinos-title-font" ) #{section.title}
      br
      p( class="text-justify" ) #{section.text}
    div( class="col-sm-6")
      img( src=section.image_url alt="Image" class="img-responsive" 
           style="width: 550px; height: 500px" )


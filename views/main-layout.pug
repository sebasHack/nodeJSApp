- var title = head_title || "DestinosIO" 
- var language = locale || "en"

include ./mixins/fb-sdk.pug

doctype html
html(lang=language) 
  head
    title #{title} 
    //Mobile responsiveness
    meta( name="viewport" content="width=device-width, initial-scale=1" )
    meta( charset="utf-8" )
    //Logo
    link( rel="icon" href="/static/logos/d_logo.png" )
    //Latest compiled and minified Bootstrap CSS
      // --link( rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" )
    link( rel="stylesheet" href="/static/bootstrap/dist/css/bootstrap.min.css" )
    // jQuery (necessary for Bootstrap's JavaScript plugins)
      // -- script( src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.2/jquery.min.js" )
    script( src="/static/jquery/dist/jquery.min.js" )
    // Latest compiled JavaScript 
      // -- script( src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js" )
    script( src="/static/bootstrap/dist/js/bootstrap.min.js" )
    //Custom CSS
    link( rel="stylesheet"  href="/static/css/main.min.css" )
    //Google fonts
      // -- link( href="https://fonts.googleapis.com/css?family=Dosis|Oleo+Script" rel="stylesheet" type="text/css" )
  body
  +fb-sdk(language)
  //Include Search Modal
  include ./partials/search-modal.pug
  nav( class="navbar navbar-default navbar-fixed-top" )
    div( class="container-fluid" )
      div( class="navbar-header" )
        button( type="button" class="navbar-toggle" data-toggle="collapse" 
                data-target="#appNavbar" )
          span( class="icon-bar" )
          span( class="icon-bar" )
          span( class="icon-bar" )
        a( class="navbar-brand destinos-title-font" href="/" ) DestinosIO
      div( class="collapse navbar-collapse" id="appNavbar" )
        ul( class="nav navbar-nav" )
          li
            a( href="/about" ) #{__("About Us")}
          li
            a( href="#" class="dropdown-toggle" data-toggle="dropdown" ) 
              | #{__("Language")} #[span(class="caret")]
            ul(class="dropdown-menu")
                li 
                  a(href="/locale/en") English
                li 
                  a(href="/locale/es") Espa√±ol
          li  
            a( href="#" data-toggle="modal" data-target="#searchModal" ) 
              | #{__("Search")} #[span(class="glyphicon glyphicon-search")]
  block body
              
  footer( class="container-fluid text-center") 
    div( class="row" )
      div( class="col-sm-2" )
        p 2016 #[span(class="glyphicon glyphicon-copyright-mark")] DestinosIO
      div( class="col-sm-3" )
      div( class="col-sm-1" )
        a( href="/about" ) #{__("About")}
      div( class="col-sm-1" )
        a( href="/policies" ) #{__("Policy")}
      div( class="col-sm-1" )
      div( class="col-sm-1" )
      div( class="col-sm-1" )
        a( href="https://www.instagram.com/destinosio" )
          img( src="/static/logos/inst_logo.svg" alt="Image" 
               style="width: 40px; height: 40px" )
      div( class="col-sm-1" )
        a( href="https://www.facebook.com/Destinosio-1559548944351305" )
          img( src="/static/logos/fb_logo.svg" alt="Image" 
               style="width: 40px; height: 40px" )
      div( class="col-sm-1" )
        a( href="#" )
          img( src="/static/logos/youtube_logo.svg" alt="Image" 
               style="width: 40px; height: 40px" )
      
     
      
            
            
